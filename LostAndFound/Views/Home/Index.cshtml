@model IEnumerable<LostAndFound.Models.Find>

@{
    ViewBag.Title = "Index";
}

<link href="~/Scripts/font-awesome.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>

<style>
    .fold {
        padding: 0 18px;
        display: none;
        background-color: white;
        overflow: hidden;
    }

    .active {
        display: inline-block
    }
</style>
<script src="~/Scripts/searchPage.js"></script>
<script>
    
$(document).ready(function () {
    dateDefaultValues = function () {
        year = @DateTime.Now.Year;
        month = @DateTime.Now.Month;
        if (month < 10)
            month = '0' + month;
        day = @DateTime.Now.Day;
        if (day < 10)
            day = '0' + day;
        date = year + "-" + month + "-" + day;

        $("#dateNow").val(date);

        date = (year - 1) + "-" + month + "-" + day;
        $("#fromDate").val(date);
    }
    dateDefaultValues();

    $("#category").change(function () {
        $("#hiddenMainCategory").val($("#category").val());
        $("#categoryForm").submit();
    });
    var theAllOption = ($("<option>הכל</option>"));
    $("#categoryForm").submit(function (event) {
        event.preventDefault();
        var target = $(this);

        $.ajax({
            url: target.attr("action"),
            data: target.serialize(),
            success: function (data) {

                $("#subCategories").empty().append(theAllOption);
                $.each(data, function (i, value) {
                    $("#subCategories").append($("<option>" + JSON.stringify(value).split('"')[1] + "</option>"));
                });
            }


        });

    });
    $(function () {
        $("table tr.view").on("click", function () {
            $(this).next(".fold").toggleClass("active");
        });
    })
});
</script>
<p>
    @Html.ActionLink("הוסף מציאה", "CreateFind")
</p>
<form id="categoryForm" action="@Url.Action("Index", "Home")" style="display:inline-block">
    <label>קטגוריה</label>
    <select id="category" name="category">

        <option>הכל</option>
        @foreach (var item in ViewBag.category)
        {
            <option>@item.Name</option>
        }
    </select>
</form>
@using (Ajax.BeginForm("SearchFinds", new AjaxOptions()
{
    UpdateTargetId = "updateTable",
    HttpMethod = "GET",
    InsertionMode = InsertionMode.Replace

}))
{
    <input id="hiddenMainCategory" name="hiddenCategory" hidden="hidden" value="הכל" />

    <label>תת קטגוריה</label>
    <select id="subCategories" name="subCategory">
        <option>הכל</option>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <option>@item</option>
            }

        }
    </select>

    <label>מקום</label>
    <select id="place" name="place">
        <option>הכל</option>
        @foreach (var item in ViewBag.place)
        {
            <option>@item.PlaceOrEvent</option>
        }
    </select>
    <label>החל מ</label>
    <input id="fromDate" type="date" name="fromDate" />
    <label>עד</label>
    <input id="dateNow" type="date" name="toDate"/>
    <label>טקסט חופשי</label>
    <input type="text" name="text" />
    <input type="checkbox" id="searchArchive" name="searchArchive" value="true" />
    <input type="submit" value="סנן" />

}
<h2>לוח מציאות</h2>

<div id="updateTable">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.subCategory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.picture)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dateFound)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.notes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.finderName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cellphone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.email)
            </th>
            <th></th>
        </tr>
        @foreach (var item in ViewBag.tbl)
        {
            <tr class="clickableAccordion">
                <td>
                    @item.subcategoryname
                </td>
                <td>
                    @item.description
                </td>
                <td>
                    ""
                </td>
                <td>
                    @item.PlaceOrEvent
                </td>
                <td>
                    @item.date
                </td>

                <td>
                    @item.notes
                </td>
                <td>
                    @item.name
                </td>
                <td>
                    @item.cellphone
                </td>
                <td>
                    @item.email
                </td>
            </tr>
            //<tr class="fold">accordion</tr>

        }
    </table>
</div>

